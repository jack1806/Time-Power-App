<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lbl_name"
    android:focusableInTouchMode="true"
    tools:context="com.example.android.timepower.Fragment.FreeFriendsFragment">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:visibility="invisible"
        android:id="@+id/free_friend_progress_bar"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/tableItemTime"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:padding="8dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:layout_height="wrap_content"
                    android:text="From"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/profile_item_background"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:cursorVisible="false"
                    android:padding="8dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:textColor="@color/bootStrapPrimaryBtn"
                    android:textStyle="bold"
                    android:id="@+id/free_item_from_time"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="@color/tableItemTime"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:background="@drawable/profile_item_background"
                    android:fontFamily="@font/comfortaa_regular"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:textColor="@color/bootStrapPrimaryBtn"
                    android:textStyle="bold"
                    android:id="@+id/free_item_to_time"/>

            </LinearLayout>


    </LinearLayout>

    <ExpandableListView
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:id="@+id/free_fr_expandable"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ExpandableListView>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/free_search_button"
        android:background="@drawable/profile_item_background"
        android:backgroundTint="@color/bootStrapPrimaryBtn"
        android:text="Submit"/>

</RelativeLayout>
