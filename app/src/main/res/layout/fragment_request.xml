<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.android.timepower.Fragment.AddFriendsFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="4dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/request_recycler_view"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <ImageView
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/no_request_image"
        android:background="@drawable/ic_hourglass_empty_black_24dp"
        android:backgroundTint="@color/ngoGrey1"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_request_text"
        android:layout_below="@id/no_request_image"
        android:text="@string/no_requests"
        android:textColor="@color/ngoGrey1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

</RelativeLayout>
