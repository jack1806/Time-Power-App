<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

<RelativeLayout
    android:background="@drawable/profile_item_background"
    android:layout_width="match_parent"
    android:padding="9dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/ngoBtnBackGrey"
            android:id="@+id/profile_user_name"
            android:fontFamily="@font/yosemite_regular"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="UserName"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/profile_email"
                android:fontFamily="@font/yosemite_regular"
                android:textColor="@color/ngoBtnBackGrey"
                android:textSize="12sp"
                android:text="UserName"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_friend_button"
                    android:gravity="center"
                    android:text="Add Friend"
                    android:textStyle="bold"
                    android:backgroundTint="@color/bootStrapPrimaryBtn"
                    android:background="@drawable/profile_item_background"
                    android:fontFamily="@font/yosemite_regular"
                    android:textColor="@color/white"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/request_sent"
                    android:text="Sent"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:background="@drawable/profile_item_background"
                    android:backgroundTint="@color/bootStrapPrimaryBtn"
                    android:fontFamily="@font/yosemite_regular"
                    android:textColor="@color/white"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/friends_already"
                    android:text="Friends"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:background="@drawable/profile_item_background"
                    android:backgroundTint="@color/bootStrapPrimaryBtn"
                    android:fontFamily="@font/yosemite_regular"
                    android:textColor="@color/white"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/already_requested_by"
                    android:text="Requested You"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:background="@drawable/profile_item_background"
                    android:fontFamily="@font/yosemite_regular"
                    android:textColor="@color/bootStrapPrimaryBtn"
                    android:padding="5dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!--<ImageView
        android:id="@+id/add_friend_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginRight="4dp"
        android:tint="@color/ngoGrey1"
        android:src="@drawable/ic_person_add_black_72dp"/>-->

</RelativeLayout>
</android.support.v7.widget.CardView>