<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="?attr/actionBarSize"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/online_circle"
                android:layout_width="match_parent"
                android:id="@+id/startIndicator"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="S"
                android:layout_centerInParent="true"
                android:textSize="24sp"
                android:textColor="#FFF"
                android:textStyle="bold"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:textColor="@color/tableItemTime"-->
                    <!--android:textStyle="bold"-->
                    <!--android:fontFamily="@font/comfortaa_bold"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="From"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:textColor="@color/ngoGrey2"
                    android:id="@+id/time_table_item_from_time"/>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="To"-->
                    <!--android:fontFamily="@font/comfortaa_bold"-->
                    <!--android:textColor="@color/tableItemTime"-->
                    <!--android:textStyle="bold"/>-->

                <View
                    android:layout_width="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="1dp"
                    android:background="@color/ngoGrey2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="End Time"
                    android:textColor="@color/ngoGrey2"
                    android:id="@+id/time_table_item_end_time"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/yosemite_regular"
                android:text="Time Table Header"
                android:textSize="18sp"
                android:textColor="@color/lbl_name"
                android:textStyle="bold"
                android:id="@+id/time_table_item_header"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time_table_item_sub_title"
                android:text="Time Table Sub header"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/yosemite_regular"
                android:textColor="@color/lbl_name"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>